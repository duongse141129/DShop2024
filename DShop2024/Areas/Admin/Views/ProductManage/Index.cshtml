@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Manage Product";
}
<h4>List Product Admin</h4>
<a asp-area="Admin" asp-action="Create" asp-controller="ProductManage">Add Product</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">Stt</th>
            <th scope="col" >Image</th>
            <th scope="col">Product Name</th>
            <th scope="col">Description</th>
            <th scope="col">Stock</th>    
            <th scope="col">Price</th>    
            <th scope="col">Slug</th>
            <th scope="col">Category</th>
            <th scope="col">Brand</th>
            <th scope="col">Product Manage</th>
          
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@i</th>
                <td><img src="~/media/products/@item.Image" width="120" height="100" /></td>
                <td>@item.ProductName</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>
                    @item.Stock
                    <br/>
                    <a asp-action="AddQuantity" asp-controller="ProductManage" asp-route-Id="@item.Id">Add Quantity</a>
                </td>
                <td>@item.Slug</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.Brand.BrandName</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="ProductManage" asp-route-Id="@item.Id">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="ProductManage" asp-route-Id="@item.Id">Delete</a>
                </td>

            </tr>

            
                i++;
            
        }
        
    </tbody>
    
</table>

