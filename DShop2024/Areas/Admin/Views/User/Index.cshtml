@{
    ViewData["title"] = "List User";
}

<p>
    <a asp-action="Create" asp-controller="User">Create New User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Role</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userWithRoles in Model)
        {
            <tr>
                <td>@userWithRoles.User.Id</td>
                <td>@userWithRoles.User.UserName</td>
                <td>@userWithRoles.User.Email</td>
                <td>@userWithRoles.User.PhoneNumber</td>
          
                <td>
                    @userWithRoles.RoleName
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-id="@userWithRoles.User.Id">Edit</a> |
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="User" asp-route-id="@userWithRoles.User.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
