@model BannerModel
@{
    ViewData["title"] = "Edit Banner";
}
<h4>Edit Product </h4>

<div class="col-md-9">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.Id" />
        <div class="form-group">
            <label>Banner Name</label>
            <input asp-for="BannerName" class="form-control" />
            <span asp-validation-for="BannerName" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Status</label>
            <select asp-for="Status" class="form-control" asp-items="ViewBag.Brands">
                @if(Model.Status == 1)
                {
                    <option selected value="1">Enable</option>
                    <option value="-1">Disable</option>
                }
                @if (Model.Status == -1)
                {
                    <option value="1">Enable</option>
                    <option selected value="-1">Disable</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Image</label>
            <input asp-for="ImageUpload" class="form-control" />
            <span asp-validation-for="ImageUpload" class="text-danger" />
            <img src="~/media/banners/@Model.Image" width="350" height="180" />
            <img id="imgpreview" class="pt-2" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Edit</button>
        </div>
    </form>
    <a asp-action="Index">Back to slider  </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <script>
        $("#ImageUpload").change(function () {
            readURL(this);
        });
    </script>
    <script>
        CKEDITOR.replace('Description');
    </script>
}
