                                return {
                                    date = item.date,
                                    sold = item.sold,
                                    quantity = item.quantity,
                                    revenua = item.revenua,
                                    profit = item.profit
                                }
                            }));
                        } else {
                            console.warn("No data received for Morris chart update");
                            ChartMorris.setData([]);
                        }
                    },
                    error: function (error) {
                        console.error("Error fetching data:", error);
                    }
                });
            });

        });




    </script>
}