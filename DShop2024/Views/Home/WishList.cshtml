@{
    ViewData["title"] = "Compare Product";
}
<h4>List Compare Product </h4>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">Stt</th>
            <th scope="col">Image</th>
            <th scope="col">Product Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@i</th>
                <td><img src="~/media/products/@item.Product.Image" width="120" height="100" /></td>
                <td>@item.Product.ProductName</td>
                <td>@Html.Raw(item.Product.Description)</td>
                <td>@item.Product.Price.ToString("#,##0 VND")</td>
                <td>

                    <a asp-action="DeleteWishList" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Home" asp-route-Id="@item.WishList.Id">Delete</a>
                </td>

            </tr>


            i++;

        }

    </tbody>

</table>

