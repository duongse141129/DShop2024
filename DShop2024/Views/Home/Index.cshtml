@model IEnumerable<ProductModel>

@* <div class="col-sm-3">
	@Html.Partial("_SidebarPartial")
	
</div> *@

<partial name="_SliderPartial" />
<div class="col-sm-3">
	<partial name="_SidebarPartial" />
</div> 

<div class="col-sm-9 padding-right">
	<div class="features_items">
		<!--features_items-->
		<h2 class="title text-center">Features Items</h2>
		@foreach (var item in Model)
		{
		<div class="col-sm-4">
			<div class="product-image-wrapper">
				<div class="single-products">
				
						<div class="productinfo text-center">
							<a asp-action="Details" asp-controller="Product" asp-route-Id="@item.Id">
								<img src="~/media/products/@item.Image" alt="@item.ProductName" width="100%" height="200px"/>
								<h2>$@item.Price.ToString("#,##0 VND")</h2>
								<p>@item.ProductName</p>
								<p>Category: @item.Category.CategoryName</p>
								<p>Brand: @item.Brand.BrandName</p>
							</a>
							@* @* <a class="btn btn-default add-to-cart" asp-action="AddToCart" asp-controller="Cart" asp-route-Id="@item.Id"><i class="fa fa-shopping-cart"></i>Add to cart</a> *@
							@if(item.Stock > 0)
							{
								<a class="btn btn-default add-to-cart" asp-action="AddToCart" asp-controller="Cart" asp-route-Id="@item.Id"><i class="fa fa-shopping-cart"></i>Add to cart</a>
								@* <button class="btn btn-default add-to-cart" data-product_id="@item.Id"><i class="fa fa-shopping-cart"></i>Add to Cart</button> *@
							}
							else
							{
								<button class="btn btn-default add-to-cart" ><i class="fa fa-shopping-cart"></i>Out Of Order</button>
							}

						</div>
					
				</div>
					
						
					
					<div class="choose">
						@if (User.Identity?.IsAuthenticated ?? false)
						{
							<ul class="nav nav-pills nav-justified">
								<li>
									<button class="btn btn-danger add-btn-wishlist" data-product_id="@item.Id">Add to Wishlist</button>
								</li>
								<li>
									<button class="btn btn-primary add-btn-compare" data-product_id="@item.Id">Add to Compare</button>
								</li>
							</ul>
						}
				</div>
			</div>
		</div>
		}

	</div><!--features_items-->
	
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			$('.add-to-cart').click(function () {
				var Id = $(this).data("product_id");

				$.ajax({
					type: "POST",
					url: "@Url.Action("AddToCart", "Home")",
					data: { Id: Id },

					success: function (result) {
						if (result) {
							Swal.fire("Add to wishlist successful");
						}

					}
				});
			});
		});
	</script>
	
	<script>
		$(document).ready(function () {
			$('.add-btn-wishlist').click(function () {
				var Id = $(this).data("product_id");

				$.ajax({
					type: "POST",
					url: "@Url.Action("AddToWishList", "Home")",
					data: { Id: Id },

					success: function (result) {
						if (result) {
							Swal.fire("Add to wishlist successful");
						}

					}
				});
			});
		});
	</script>

	<script>
		$(document).ready(function () {
			$('.add-btn-compare').click(function () {
				var Id = $(this).data("product_id");

				$.ajax({
					type: "POST",
					url: "@Url.Action("AddToCompare", "Home")",
					data: { Id: Id },

					success: function (result) {
						if (result) {
							Swal.fire("Add to compare successful");
						}

					}
				});
			});
		});
	</script>
}

					