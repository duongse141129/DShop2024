@{
    ViewData["Title"] = "Compare Product";
}
<h4>List Compare Product </h4>
<table class="table" id="myTable">
    <thead>
        <tr>
         
            <th scope="col">Image</th>
            <th scope="col">Product Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
    
        @foreach (var compareProduct in Model)
        {
            <tr>
        
                <td><img src="~/media/products/@compareProduct.Product.Image" width="120" height="100" /></td>
                <td>@compareProduct.Product.ProductName</td>
                <td>@Html.Raw(compareProduct.Product.Description)</td>
                <td>@compareProduct.Product.Price.ToString("#,##0 VND")</td>
                <td>

                    <a asp-action="DeleteCompare" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Home" asp-route-Id="@compareProduct.Compare.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>

</table>

